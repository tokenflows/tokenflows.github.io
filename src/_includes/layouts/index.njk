<!DOCTYPE html>
<html>
	<head>
		{% include 'partials/site-head.njk' %}
	</head>
	<body class="{{ doks.color_theme }}">
	  <div class="page_container">
		<div class="hero-subheader{% if grid_navigation %} hero-subheader--before-out{% endif %}">
			<div class="container">
				<div class="row">
					<div class="col-md-7">
						<div class="align-container" data-mh>
							<div class="align-inner">
								{% if title %}
									<h1 class="hero-subheader__title">{{title}}</h1>
								{% endif %}
								{% if description %}
									<p class="hero-subheader__desc">{{ description }}</p>
								{% endif %}
								{% for button in buttons %}
									{% if button.external_url == true %}
									<a href="{{ button.url }}" class="btn btn--dark btn--rounded btn--w-icon">
										{% if button.icon %}<i class="icon icon--{{ button.icon }}"></i>{% endif %}
										{{ button.content }}
									</a>
									{% else %}
									<a href="{% if environment == 'production' %}{{ site.baseurl}}{% endif %}{{ button.url }}" class="btn btn--dark btn--rounded btn--w-icon">
										{% if button.icon %}<i class="icon icon--{{ button.icon }}"></i>{% endif %}
										{{ button.content }}
									</a>
									{% endif %}
								{% endfor %}
							</div><!-- /.align-inner -->
						</div><!-- /.align-container -->
					</div><!-- /.col -->
					{% if author.title and author.description and author.title_url %}
						<div class="col-md-4 col-md-offset-1 hidden-xs hidden-sm">
							<div class="align-container" data-mh>
								<div class="align-inner">
									<div class="hero-subheader__author">
										<p class="hero-subheader__author-title">
											{% if button.external_url == true %}
											<a href="{{ author.title_url }}" class="btn btn--read-more">
												{{ author.title }}
												<i class="icon icon--arrow-right"></i>
											</a>
											{% else %}
											<a href="{% if environment == 'production' %}{{ site.baseurl}}{% endif %}{{ author.title_url }}" class="btn btn--read-more">
												{{ author.title }}
												<i class="icon icon--arrow-right"></i>
											</a>
											{% endif %}
										</p><!-- /.hero-subheader__author-title -->
										<p>{{ author.description }}</p>
									</div><!-- /.hero-subheader__author -->
								</div><!-- /.align-inner -->
							</div><!-- /.align-container -->
						</div><!-- /.col -->
					{% endif %}
				</div><!-- /.row -->
			</div><!-- /.container -->
		</div><!-- /.hero-subheader -->
		{% if grid_navigation %}
			<div class="section section--darker-theme-color-bg main-content">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<div class="nav-grid nav-grid--out">
								<div class="row">
									{% for item in grid_navigation %}
										<div class="col-sm-6 col-lg-4">
											<a href="{% if environment == 'production' %}{{ site.baseurl}}{% endif %}{{ item.url }}" class="nav-grid__item">
												<div class="nav-grid__content" data-mh>
													<h2 class="nav-grid__title">{{ item.title }}</h2>
													<p>{{ item.excerpt }}</p>
												</div><!-- /.nav-grid__content -->
												<p class="nav-grid__btn">
													{{ item.cta }}
													<i class="icon icon--arrow-right"></i>
												</p>
											</a><!-- /.nav-grid__item -->
										</div><!-- /.col -->
									{% endfor %}
								</div><!-- /.row -->
							</div><!-- /.nav-grid -->
						</div><!-- /.col -->
					</div><!-- /.row -->
				</div><!-- /.container -->
			</div><!-- /.section -->
		{% endif %}
		{% include 'partials/site-footer.njk' %}
	  </div>
	</body>
</html>