{% if doks.header.nav %}
	<div class="offcanvas visible-xs">
		<ul class="offcanvas__nav">
			{% for item in doks.header.nav %}
				<li><a href="{% if environment == 'production' %}{{ site.baseurl}}{% endif %}{{ item.item_url }}">{{ item.item_name }}</a></li>
			{% endfor %}
		</ul><!-- /.offcanvas__nav -->
	</div><!-- /.offcanvas -->
{% endif %}
{% if doks.header.logo.text or doks.header.logo.image or doks.header.nav %}
	<header class="site-header">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					{% if doks.header.logo.text %}
						<a href="{% if environment == 'production' %}{{ site.baseurl}}{% endif %}/" class="site-header__logo">{{ doks.header.logo.text }}</a>
					{% elif doks.header.logo.image %}
						<a href="{% if environment == 'production' %}{{ site.baseurl}}{% endif %}/" class="site-header__logo">
							<img src="{% if environment == 'production' %}{{ site.baseurl}}{% endif %}/assets/images/{{doks.header.logo.image}}">
						</a><!-- /.site-header__logo -->
					{% endif %}
					{% if doks.header.nav %}
						<ul class="site-header__nav hidden-xs">
							{% for item in doks.header.nav %}
								<li><a href="{% if environment == 'production' %}{{ site.baseurl}}{% endif %}{{ item.item_url }}">{{ item.item_name }}</a></li>
							{% endfor %}
						</ul><!-- /.site-header__nav -->
						<button class="offcanvas-toggle visible-xs">
							<span></span>
							<span></span>
							<span></span>
						</button><!-- /.offcanvas-toggle -->
					{% endif %}
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container -->
	</header><!-- /.site-header -->
{% endif %}
